<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="mail_id"
			type="hidden"
		/>

		<field
			name="language"
			type="hidden"
		/>

		<field
			name="subject"
			type="text" 
			label="COM_CONFIG_FIELD_SUBJECT_LABEL"
			class="input-xxlarge"
			size="40"
			required="true"
		/>

		<field
			name="subject_switcher"
			type="radio"
			class="switcher"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="body"
			type="editor"
			label="COM_CONFIG_FIELD_BODY_LABEL"
			editor="none"
			buttons="false"
			class="inputbox"
			filter="JComponentHelper::filterText"
		/>

		<field
			name="body_switcher"
			type="radio"
			class="switcher"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="htmlbody"
			type="editor"
			label="COM_CONFIG_FIELD_HTMLBODY_LABEL"
			buttons="false"
			class="inputbox"
			filter="JComponentHelper::filterText"
		/>

		<field
			name="htmlbody_switcher"
			type="radio"
			class="switcher"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
</form>
